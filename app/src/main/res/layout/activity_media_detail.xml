<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/almostblack"
    tools:context=".MediaDetailActivity">

    <ImageView
        android:id="@+id/image_detail"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/title_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title Detail"
        android:textColor="@color/mustard"
        android:layout_marginLeft="30dp"
        android:textSize="@dimen/title"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginRight="0dp"
        android:layout_gravity="center"
        android:background="@color/mustard"
        android:layout_marginLeft="30dp"/>


    </LinearLayout>


    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
        >
    <TextView
        android:id="@+id/text_sinopsis"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:textSize="@dimen/descText"
        android:textColor="@color/white"
        android:text="Detail Text"
        android:paddingBottom="10dp"
        android:scrollbars="vertical"
      />
        </ScrollView>

    <Button
        android:id="@+id/buy_tickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/round_button"
        android:textColor="@color/black"
        android:paddingHorizontal="@dimen/paddingButton"
        android:layout_marginTop="-35dp"
        android:text="Buy my Ticket!" />

    <TextView
        android:id="@+id/seats_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/grisclaro"
        android:textStyle="italic"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        />

</LinearLayout>